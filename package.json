{
  "name": "poker",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "clean": "rm -rf node_modules package-lock.json dist",
    "build": "tsc",
    "lint": "eslint --cache --fix --ext .js,.mjs,.cjs,.ts,.mts,.cts,.json,.jsonc,.json5,.md .",
    "commit": "git-cz",
    "commitlint": "commitlint --edit",
    "prepare": "husky",
    "start": "tsx src/main.ts",
    "test": "vitest"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown",
    "*.{.js,.mjs,.cjs,.ts,.mts,.cts,.json,.jsonc,.json5,.md}": "npm run lint"
  },
  "validate-branch-name": {
    "pattern": "^(master|main|develop){1}$|^(feature|fix|hotfix|release)/.+$",
    "errorMsg": "Branch name must be master, main, develop, feature/xxx, fix/xxx, hotfix/xxx or release/xxx"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/js": "^9.30.0",
    "@eslint/json": "^0.12.0",
    "@eslint/markdown": "^6.6.0",
    "@types/jest": "^30.0.0",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^9.29.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.5.1",
    "globals": "^16.2.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "prettier": "^3.6.2",
    "tsx": "^4.20.3",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.35.0",
    "validate-branch-name": "^1.3.2",
    "vite": "^7.0.0",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
